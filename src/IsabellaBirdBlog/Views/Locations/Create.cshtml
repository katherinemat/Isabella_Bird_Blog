@model IsabellaBirdBlog.Models.Location
@{
    ViewData["Title"] = "Isabella Bird Blog - New Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
<hr />
<h4>Add a new location</h4>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.LocationName)
        @Html.TextBoxFor(model => model.LocationName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.DropDownList("Geoclasses", (IEnumerable<SelectListItem>)ViewBag.Geoclasses, new { @class = "form-control" })
    </div>

    <input type="submit" value="Add new location" class="btn btn-primary"/>
}
<p>@Html.ActionLink("Back to list", "Index")</p>
